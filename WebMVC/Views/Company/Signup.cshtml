@model WebMVC.Models.Company;

@{
    ViewData["Title"] = "Nueva empresa";
}

<div style="background:#E3E2E2;height:calc(100% - 56px);font-family: 'Roboto', sans-serif;" class="row px-3 overflow-auto">
    <div class="col-md-12">
        <h2 class="text-secondary my-3">
            Registrar empresa
        </h2>
        <div class="card">
            <div class="card-body">
                <form asp-controller="Company" asp-action="Signup" method="POST">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Mail" class="control-label"></label>
                            <input type="email" asp-for="Mail" class="form-control" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Cuit" class="control-label"></label>
                            <input type="text" asp-for="Cuit" class="form-control" />
                            <span asp-validation-for="Cuit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Address" class="control-label"></label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="CityZipCode" class="control-label"></label>
                            <select class="form-control" asp-for="CityZipCode">
                                @foreach(WebMVC.Models.City city in ViewBag.cities){
                                    <option value="@city.ZipCode">@city.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CityZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="ReferenceName" class="control-label"></label>
                            <input type="text" asp-for="ReferenceName" class="form-control" />
                            <span asp-validation-for="ReferenceName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="ReferenceEmail" class="control-label"></label>
                            <input type="email" asp-for="ReferenceEmail" class="form-control" />
                            <span asp-validation-for="ReferenceEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="ReferencePhone" class="control-label"></label>
                            <input type="text" asp-for="ReferencePhone" class="form-control" />
                            <span asp-validation-for="ReferencePhone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <input type="submit" value="Agregar" class="btn btn-primary w-75" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>