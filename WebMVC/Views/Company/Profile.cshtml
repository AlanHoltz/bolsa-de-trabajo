@using Microsoft.AspNetCore.Http

@model WebMVC.Models.Company

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h3 class="text-center text-uppercase">Perfil</h3>
            <div class="card row" style="flex-direction: row; padding:15px;">
                <div class="col-md-4">
                    <img src="~/images/logo.png" />
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nombre</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label>Dirección</label>
                            <p>@Model.Address</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Mail</label>
                            <p>@Model.User.Mail</p>
                        </div>
                        <div class="col-md-6">
                            <label>CUIT</label>
                            <p>@Model.Cuit</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Ciudad</label>
                            <p>@Model.City.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label>Autorizado</label>
                            <p>@(Model.Status == "Authorized" ? "Si" : "No")</p>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <a class="btn btn-primary" asp-controller="Company" asp-action="Edit" asp-route-id="@Context.Session.GetString("Id")">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>