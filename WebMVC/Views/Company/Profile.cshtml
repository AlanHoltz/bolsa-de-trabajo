@using Microsoft.AspNetCore.Http

@model WebMVC.Models.Company

<div style="background:#E3E2E2;height:calc(100% - 56px);font-family: 'Roboto', sans-serif;" class="row px-3 overflow-auto">
    <div class="col-md-12">
        <div class="col-md-8 mx-auto">
            <h3 class="text-center text-uppercase my-2 text-secondary">Perfil</h3>
            <div class="card row" style="flex-direction: row; padding:15px;">
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img height="40" width="auto" src="@(@Model.Photo != null ? $"/images/companies/{Model.Photo}" : "/images/logo.png")" />
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-primary">Nombre</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-primary">Dirección</label>
                            <p>@Model.Address</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-primary">Mail</label>
                            <p>@Model.User.Mail</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-primary">CUIT</label>
                            <p>@Model.Cuit</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-primary">Ciudad</label>
                            <p>@Model.City.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-primary">Autorizado</label>
                            <p>@(Model.Status == "Authorized" ? "Si" : "No")</p>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <a class="btn btn-primary" asp-controller="Company" asp-action="Edit" asp-route-id="@Context.Session.GetString("Id")">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>