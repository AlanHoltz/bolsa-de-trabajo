@using WebMVC.Models
@model List<JobProfilePerson>

<style>
    .btn-job:hover{
        opacity: .8;
        cursor:pointer;
        transition: background .3s ease;
    }
</style>

<div style="background:#E3E2E2;height:calc(100% - 56px);font-family: 'Roboto', sans-serif;" class="row px-3 overflow-auto">
    <div class="col-md-12">
        <div style="display:flex;justify-content:space-between;align-items:center;">
            <h2 class="text-secondary my-3">
                Postulantes
            </h2>
            <p style="margin:0">
                Cantidad de postulantes: @ViewBag.quantity
            </p>
        </div>

@foreach (JobProfilePerson jpp in Model)
{
    <div class="row shadow mb-4 bg-white rounded py-4 px-1 justify-content-between js-job">
  
        <div class="col-sm-12">

            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <div class="row">
                        <div class="px-1">
                            <img src="~/images/logo.png" width="75" height="75"/>
                        </div>

                        <div class="pl-1">
                        <h4 style="color:#6067D9">
                            @jpp.Persons.Name @jpp.Persons.Surname
                            </h4>
                            <span class="font-weight-bold text-success">@jpp.Persons.User.Mail</span><br/>
                            <span class="text-secondary px-4">@(DateTime.Today.AddTicks(-jpp.Persons.BirthDate.Ticks).Year - 1) años</span>
                        </div>
                    </div>
                </div>
                <a class="btn btn-primary mr-4 p-3 btn-job">Ver CV</a>
            </div>
        </div>
    </div>
}


        
    </div>
</div>
    