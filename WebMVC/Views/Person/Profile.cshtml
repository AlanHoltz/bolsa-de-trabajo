@using Microsoft.AspNetCore.Http

@model WebMVC.Models.Person



<div style="background:#E3E2E2;height:calc(100% - 56px);font-family: 'Roboto', sans-serif;" class="row px-3 overflow-auto">
    <div class="col-md-12">
        <div class="col-md-8 mx-auto">
            <h3 class="text-center text-uppercase my-2 text-secondary">Perfil</h3>
            <div class="card row" style="flex-direction: row; padding:15px;">
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img height="40" width="auto" src="~/images/logo.png" />
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-primary">Nombre</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-primary">Apellido</label>
                            <p>@Model.Surname</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-primary">Mail</label>
                            <p>@Model.User.Mail</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-primary">Fecha de nacimiento</label>
                            <p id="birthdate">@Model.BirthDate.Date</p>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <a class="btn btn-primary m-3" asp-controller="Person" asp-action="Edit" asp-route-id="@Context.Session.GetString("Id")">Editar</a>
                        <a class="btn btn-secondary m-3 text-white" asp-controller="Person" asp-action="MyCV">Ver mi CV</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function() {
        const birthdate = document.getElementById('birthdate');

        birthdate.value = formatDate(@Model.BirthDate);
    },
    });

    function formatDate(date) {
      return (
        [
          date.getFullYear(),
          padTo2Digits(date.getMonth() + 1),
          padTo2Digits(date.getDate()),
        ].join('-')
      );
    }

</script>

