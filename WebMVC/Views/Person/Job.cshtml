@using WebMVC.Models
@{
    ViewData["Title"] = "Job";
    string type = Model.Type == "Relationship" ? "Relación de Dependencia" : "Pasantía";
}
@model JobProfile

<div style="background:#E3E2E2;height:calc(100% - 56px);font-family: 'Roboto', sans-serif;" class="row px-3 overflow-auto">
    <div class="col-sm-12 px-4">
        <div class="row mt-3">
            <a style="cursor:pointer" onclick="history.back()" class="btn btn-primary">Regresar</a>
        </div>
        <div
            class="row shadow rounded my-3 bg-white justify-content-between p-2"
          >
            <div>
              <div class="">
                <h3 class="text-primary">@Model.Position</h3>
                <div class="row">
                  <div class="col-auto">
                    <img
                      width="50"
                      height="auto"
                      src="@(@Model.Company.Photo != null ? $"/images/companies/{Model.Company.Photo}" : "/images/logo.png")"
                      />
                  </div>
                  <div class="col-auto align-self-center p-0">
                    <h5 style="color:#6067D9" class="text-primary font-weight-light">@Model.Company.Name</h5>
                  </div>
                </div>
              </div>
            </div>
            @if (System.Convert.ToBoolean(ViewData["PersonApplied"]))
            {
            <a class="btn btn-danger h-50 align-self-center" asp-controller="Person" asp-action="RemoveApplication" asp-route-id="@Model.Id">Cancelar</a>
            }
            else
            {
            <a class="btn btn-success h-50 align-self-center" asp-controller="Person" asp-action="AddApplication" asp-route-id="@Model.Id">Aplicar</a>
            }
          </div>
          <div
            class="row shadow rounded my-3 bg-white justify-content-between p-2"
          >
            <div class="col-sm-12">
              <div class="row">
                <div class="col-auto text-primary">
                  Duración:
                </div>
                <div class="col-auto p-0">@Model.StartingDate.ToString("dd/MM/yyyy") - @Model.EndingDate.ToString("dd/MM/yyyy")</div>
              </div>
              <div class="row">
                <div class="col-auto text-primary">
                  Dirección:
                </div>
                <div class="col-auto p-0">@Model.Address</div>
              </div>
              <div class="row">
                <div class="col-auto text-primary">
                  Tipo de Trabajo: 
                </div>
                <div class="col-auto p-0">
                 @type
                </div>
              </div>
              <div class="row">
                <div class="col-auto text-primary">
                  Vacantes:
                </div>
                <div class="col-auto p-0">@Model.Capacity postulaciones</div>
              </div>
            </div>
          </div>
          <div
            class="row shadow rounded my-3 bg-white justify-content-between p-2"
          >
            <div class="col-sm-12">
              <h4 class="text-primary">Descripción</h4>
              <p>
                @Model.Description
              </p>
            </div>
          </div>
    </div>
</div>

    