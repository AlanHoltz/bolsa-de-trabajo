@model WebMVC.Models.Person;

@{
    ViewData["Title"] = "Edit Person";
}

<div style="background:#E3E2E2;height:calc(100% - 56px);font-family: 'Roboto', sans-serif;" class="row px-3 overflow-auto">
    <div class="col-md-12">
        <h2 class="text-secondary my-3">
            Editar Persona
        </h2>
        <div class="card">
            <div class="card-body">
                <form asp-controller="Person" asp-action="Edit" method="POST">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Mail" class="control-label"></label>
                            <input type="email" asp-for="Mail" class="form-control" value="@Model.Mail"/>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control" value="@Model.Password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="Name" class="control-label"></label>
                            <input type="text" asp-for="Name" class="form-control" value="@Model.Name"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Surname" class="control-label"></label>
                            <input type="text" asp-for="Surname" class="form-control" value="@Model.Surname"/>
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="BirthDate" class="control-label"></label>
                            <input type="date" asp-for="BirthDate" class="form-control" id="birthdate" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <input type="submit" value="Editar" class="btn btn-primary w-75" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function() {
        const birthdate = document.getElementById('birthdate');

        birthdate.value = formatDate(@Model.BirthDate);
    },
    });

    function formatDate(date) {
      return (
        [
          date.getFullYear(),
          padTo2Digits(date.getMonth() + 1),
          padTo2Digits(date.getDate()),
        ].join('-')
      );
    }

</script>